@model SalesControl.Models.ViewModels.EmployeesFormViewModel

@{
    ViewData["Title"] = "Edit";
}
<h2>@ViewData["Title"]</h2>
<hr/>
<div>
    <div>
        <form asp-action="EditTwo">
            <table>
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Employee.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Employee.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Employee.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Employee.BirthDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Employee.BaseSalary)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Sectors)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.Employee.Id)
                            <input asp-for="Employee.Id" type="hidden">
                        </td>
                        <td>
                            <input asp-for="Employee.Name" placeholder="@Model.Employee.Name"> 
                        </td>
                        <td>
                            <input asp-for="Employee.Email" placeholder="@Model.Employee.Email"/>
                        </td>
                        <td>
                            <input asp-for="Employee.BirthDate" placeholder="@Model.Employee.BirthDate"/>
                        </td>
                        <td>
                            <input asp-for="Employee.BaseSalary" placeholder="@Model.Employee.BaseSalary"/>
                        </td>
                        <td>
                            <select asp-for="Employee.SectorId" asp-items="@(new SelectList(Model.Sectors, "Id", "Name"))"></select>
                        </td>
                        <td>
                            <input type="submit" value="Submit"/>
                        </td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>
</div>