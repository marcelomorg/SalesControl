@model IEnumerable<SalesControl.Models.Employee>

@{
    ViewData["Title"] = "Employees";
}

<h2>Employees</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sector)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sector.Name)
                <input type="hidden" asp value="@item.Sector"/>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id=@item.Id>Edit</a>
                @Html.ActionLink("Details", "Detail", new {item.Id})
                @Html.ActionLink("Delete", "Delete", new {item.Id})
            </td>
        </tr>
}
    </tbody>
</table>