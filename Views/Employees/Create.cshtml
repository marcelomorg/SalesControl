@model SalesControl.Models.ViewModels.EmployeesFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>
<hr/>
<div>
    <form asp-action="Create">
        <div>
            <div asp-validation-summary="All"></div>
            <div>
                <label>@Html.DisplayNameFor(model => model.Employee.Name)</label>
                <br/>
                <input asp-for="Employee.Name"/>
                <span asp-validation-for="Employee.Name"></span>
            </div>
            <div>
                <label>@Html.DisplayNameFor(model => model.Employee.Email)</label>
                <br/>
                <input asp-for="Employee.Email"/>
                <span asp-validation-for="Employee.Email"></span>
            </div>
            <div>
                <label>@Html.DisplayNameFor(model => model.Employee.BirthDate)</label>
                <br/>
                <input asp-for="Employee.BirthDate"/>
            </div>
            <div>
                <label>@Html.DisplayNameFor(model => model.Employee.BaseSalary)</label>
                <br/>
                <input asp-for="Employee.BaseSalary"/>
                <span asp-validation-for="Employee.BaseSalary"></span>
            </div>
            <div>
                <br/>
                <label>@Html.DisplayNameFor(model => model.Employee.Sector)</label>
                <select asp-for="Employee.SectorId" asp-items="@(new SelectList(Model.Sectors, "Id", "Name"))"></select>
            </div>
            <div>
                <br/>
                <input type="submit" value="Create"/>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
